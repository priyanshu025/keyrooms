<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lnyHotelDetils"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/imgHotel"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/city" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.keyroom.CutomeView.PoppinsmediumTextView
                        android:id="@+id/txthotelName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_semibold"
                        android:maxLines="1"
                        android:text="HotelName"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp" />


                    <com.keyroom.CutomeView.PoppinsregularTextView
                        android:id="@+id/txtHotelAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:maxLines="1"
                        android:text="Address"
                        android:textColor="@color/colorCity"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="â‚¹2000"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13sdp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_8sdp"
                                android:layout_height="@dimen/_8sdp"
                                android:src="@drawable/check_box" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:fontFamily="@font/montserrat"
                                android:text="Free cancellation"
                                android:textColor="#A4C422"
                                android:textSize="@dimen/_6sdp" />

                            <ImageView
                                android:layout_width="@dimen/_8sdp"
                                android:layout_height="@dimen/_8sdp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:src="@drawable/check_box" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:fontFamily="@font/montserrat"
                                android:text="Pay at Hotel"
                                android:textColor="#A4C422"
                                android:textSize="@dimen/_6sdp" />

                            <uz.jamshid.library.ExactRatingBar
                                android:id="@+id/rate"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_weight="1"
                                app:isIndicator="true"
                                app:starCount="5"
                                app:starFillColor="@color/colorBlue"
                                app:starSize="20"
                                app:starValue="3" />


                        </LinearLayout>


                    </LinearLayout>


                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/txtRateUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="@string/rate_us_write_review"
                        android:textColor="@color/colorBlue"
                        android:textSize="@dimen/_11sdp"
                        android:visibility="visible" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:id="@+id/txtCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Cancel"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:visibility="visible" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/bookAgain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/dot_color"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center_horizontal"
                android:text="Book again"
                android:textSize="@dimen/_11sdp"
                android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

