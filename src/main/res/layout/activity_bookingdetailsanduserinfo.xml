<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/lnyHader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_main"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back" />

        <com.keyroom.CutomeView.PoppinsmediumTextView
            android:id="@+id/txtBookingID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Booking ID: 123"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/_12sdp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lnyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnyHader"
        android:baselineAligned="false" android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lnyBooking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgBooking"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:src="@drawable/active_tab_booking_details" />

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:id="@+id/txtBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Booking Details"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/viewBooking"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@color/colorBlue" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnyBookingDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lnyView"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="First Name"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorEditext"
                android:textSize="@dimen/_13sdp" />

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:id="@+id/txtUserName"
                android:layout_width="0dp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Last Name"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorEditext"
                android:textSize="@dimen/_13sdp" />

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:id="@+id/txtLastName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="end"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorEditext"
                android:textSize="@dimen/_13sdp" />

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:id="@+id/txtEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="end"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phone"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorEditext"
                android:textSize="@dimen/_13sdp" />

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:id="@+id/txtPhoneNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="end"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Booking Status"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorEditext"
                android:textSize="@dimen/_13sdp" />

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:id="@+id/txtBookingStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="end"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Booking Date"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorEditext"
                android:textSize="@dimen/_13sdp" />

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:id="@+id/txtBookingDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="end"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start Date"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorEditext"
                android:textSize="@dimen/_13sdp" />

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:id="@+id/txtBookingStartDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="end"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="End Date"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorEditext"
                android:textSize="@dimen/_13sdp" />

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:id="@+id/txtBookingEndDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:visibility="visible"
            android:orientation="horizontal">

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Nights"
                android:textColor="@color/colorEditext"
                android:textSize="@dimen/_13sdp" />

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:id="@+id/txtNight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="end"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Adults"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorEditext"
                android:textSize="@dimen/_13sdp" />

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:id="@+id/txtAdult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcyRoomPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_above="@id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="@dimen/_5sdp">

        <com.keyroom.CutomeView.PoppinsboldTextView
            android:id="@+id/txtCallAtHotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Call At Hotel"
            android:layout_marginRight="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:background="@drawable/btn_blue"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_10sdp" />

        <com.keyroom.CutomeView.PoppinsmediumTextView
            android:id="@+id/txtLocate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:fontFamily="@font/montserrat"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/btn_blue"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_weight="0.5"
            android:text="Locate At Hotel"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>


        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <com.keyroom.CutomeView.PoppinsboldTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Amount"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorLightBlack"
                android:textSize="@dimen/_13sdp" />

            <com.keyroom.CutomeView.PoppinsmediumTextView
                android:id="@+id/txtTotalPrice"
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserrat"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>

</RelativeLayout>