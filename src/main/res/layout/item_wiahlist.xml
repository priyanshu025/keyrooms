<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lnyHotelDetils"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="0.5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_6sdp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_15sdp"
                >

                <ImageView
                    android:id="@+id/imgHotel"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/city" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txthotelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="HotelName"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/txtHotelAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:fontFamily="@font/montserrat"
                    android:maxLines="1"
                    android:textColor="@color/colorCity"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹2000"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp" />

                <uz.jamshid.library.ExactRatingBar
                    android:visibility="gone"
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:isIndicator="false"
                    app:starCount="5"
                    app:starFillColor="@color/colorBlue"
                    app:starSize="30"
                    app:starValue="2" />
            </LinearLayout>

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/imgDelete"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/delete" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>