<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="@dimen/_300sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:elevation="@dimen/_20sdp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:gravity="center"
                android:fontFamily="@font/montserrat_semibold"
                android:text="New Version Available"
                android:textColor="@color/colorBlue"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp" />

<!--            <com.keyroom.CutomeView.PoppinsmediumTextView-->
<!--                android:layout_below="@id/title"-->
<!--                android:layout_above="@id/rel_layout"-->
<!--                android:id="@+id/txtMsg"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:gravity="center"-->
<!--                android:padding="@dimen/_15sdp"-->
<!--                android:fontFamily="@font/montserrat_semibold"-->
<!--                android:textColor="@color/colorBlue"-->
<!--                android:textSize="@dimen/_11sdp" />-->

            <RelativeLayout

                android:id="@+id/rel_layout"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                >
                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_below="@id/txtYes"
                    android:id="@+id/txt_later"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:padding="@dimen/_5sdp"
                    android:text="Remind me later"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="No,thanks"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/_11sdp" />

                <com.keyroom.CutomeView.PoppinsmediumTextView
                    android:id="@+id/txtYes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Update"
                    android:background="@drawable/btn_blue"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16sdp" />
            </RelativeLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>