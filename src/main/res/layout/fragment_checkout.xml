<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:abbreviationsLabelsColor="@color/colorLightBlack"
        app:daysLabelsColor="@color/colorEditext"
        app:disabledDaysLabelsColor="@color/colorWhite"
        app:eventsEnabled="true"
        app:headerColor="@color/colorEditext"
        app:headerLabelColor="@color/colorLightBlack"
        app:pagesColor="@color/colorWhite"
        app:selectionColor="@color/colorBlue"
        app:selectionLabelColor="@color/colorWhite"
        app:swipeEnabled="true"
        app:todayLabelColor="@color/colorYellow"
        app:type="many_days_picker" />

</LinearLayout>